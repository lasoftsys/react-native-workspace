{
  "expo": {
    "name": "Cargo",
    "slug": "cargo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon1.png",
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "flipper": true
          }
        }
      ], 
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lasofts.cargo",
      "config":{
        "googleMapsApiKey":"AIzaSyBRMBGXP6iI1K_Q6ox18UEAPYDjdQuhXJQ"
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.lasofts.cargo",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBRMBGXP6iI1K_Q6ox18UEAPYDjdQuhXJQ"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "030059ab-c360-4dd8-9c97-39225b5253ee"
      }
    }
  }
}
